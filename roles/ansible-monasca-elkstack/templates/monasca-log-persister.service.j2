[Unit]
Description=Monasca Log Persister
Requires=network.target
After=network.target

[Service]
Type=simple
Restart=on-failure
ExecStart={{ logstash_dest }}/bin/logstash -f {{ logstash_conf_dir }}/persister.conf -l {{ monasca_log_persister_log_dir }}/logs-persister.log --verbose

[Install]
WantedBy=multi-user.target
